{
    "name": "solfegejs",
    "description": "The Solfege framework",
    "homepage": "http://solfegejs.com",
    "version": "2.1.2",
    "author": "neolao <contact@neolao.com>",
    "private": false,
    "repository": "https://github.com/neolao/solfege.git",
    "license": "MIT",
    "keywords": [
        "framework",
        "solfege",
        "symfony",
        "dependency",
        "injection"
    ],
    "main": "lib/index.js",
    "engines": {
        "node": ">= 5"
    },
    "dependencies": {
        "co": "^4.6",
        "is-generator": "^1.0.3",
        "solfegejs-cli": "2.x",
        "solfegejs-configuration": "1.x",
        "solfegejs-dependency-injection": "1.x"
    },
    "devDependencies": {
        "babel-cli": "^6.7",
        "babel-plugin-add-module-exports": "0.2.*",
        "babel-plugin-closure-elimination": "1.0.*",
        "babel-plugin-syntax-async-generators": "^6.5",
        "babel-plugin-syntax-flow": "^6.5",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-plugin-transform-async-to-module-method": "^6.5",
        "babel-plugin-transform-flow-strip-types": "^6.5",
        "babel-plugin-transform-regenerator": "^6.6",
        "babel-plugin-typecheck": "^3.9",
        "babel-preset-es2015": "^6.5",
        "babel-preset-flow": "^6.23",
        "babel-preset-stage-0": "^6.5",
        "chai": "^3.5",
        "flow-bin": "^0.45.0",
        "gnomon": "^1.5.0",
        "istanbul": "0.4.*",
        "jsdoc": "^3.4",
        "mocha": "^3.3",
        "co-mocha": "^1.2",
        "watch": "^1.0.2"
    },
    "scripts": {
        "prepare": "npm run build",
        "test": "mocha --harmony --compilers js:babel-core/register --require co-mocha --recursive --reporter spec --bail",
        "coverage": "node --harmony ./node_modules/istanbul/lib/cli.js cover -- ./node_modules/mocha/bin/_mocha --harmony --recursive",
        "prebuild": "flow",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----------\"; npm run build | gnomon' ./src",
        "example-build": "flow; babel --out-dir example/lib example/src --copy-files",
        "example-console": "node --harmony  example/lib/console.js"
    },
    "babel": {
        "presets": [
            "stage-0"
        ],
        "comments": false,
        "plugins": [
            "syntax-flow",
            "transform-flow-strip-types",
            "closure-elimination",
            "add-module-exports",
            "syntax-async-functions",
            "syntax-async-generators",
            "check-es2015-constants",
            "transform-async-to-generator",
            "transform-es2015-arrow-functions",
            "transform-es2015-block-scoped-functions",
            "transform-es2015-block-scoping",
            "transform-es2015-computed-properties",
            "transform-es2015-destructuring",
            "transform-es2015-for-of",
            "transform-es2015-function-name",
            "transform-es2015-literals",
            "transform-es2015-modules-commonjs",
            "transform-es2015-object-super",
            "transform-es2015-parameters",
            "transform-es2015-shorthand-properties",
            "transform-es2015-spread",
            "transform-es2015-sticky-regex",
            "transform-es2015-template-literals",
            "transform-es2015-typeof-symbol",
            "transform-es2015-unicode-regex",
            [
                "transform-regenerator",
                {
                    "asyncGenerators": false,
                    "generators": false,
                    "async": false
                }
            ]
        ]
    }
}
