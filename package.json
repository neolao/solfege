{
    "name": "solfegejs",
    "description": "The Solfege framework",
    "homepage": "http://solfegejs.com",
    "version": "2.2.0",
    "author": "neolao <contact@neolao.com>",
    "private": false,
    "repository": "https://github.com/neolao/solfege.git",
    "license": "MIT",
    "keywords": [
        "framework",
        "solfege",
        "symfony",
        "dependency",
        "injection"
    ],
    "files": [
        "lib",
        "src"
    ],
    "main": "lib/index.js",
    "engines": {
        "node": ">= 8"
    },
    "dependencies": {
        "is-generator": "^1.0.3",
        "solfegejs-cli": "^2.0.3",
        "solfegejs-configuration": "1.x",
        "solfegejs-dependency-injection": "^1.0.10"
    },
    "devDependencies": {
        "babel-cli": "^6.7",
        "babel-preset-solfege": "^1.1.1",
        "chai": "^4.0",
        "co-mocha": "^1.2",
        "coveralls": "^2.13.1",
        "eslint": "^4.0",
        "eslint-plugin-solfege": "1.0.*",
        "flow-bin": "^0.48",
        "gnomon": "^1.5.0",
        "jsdoc": "^3.4",
        "mocha": "^3.3",
        "nyc": "^11.0",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop --quiet && flow start --quiet",
        "prepare": "npm run build && npm test",
        "lint": "eslint --ext .js src",
        "test": "mocha --harmony --compilers js:babel-core/register --require co-mocha --recursive --reporter spec --bail",
        "coverage": "nyc npm test",
        "coverage-check": "nyc check-coverage npm test",
        "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
        "prebuild": "npm run lint && npm run flow-restart && flow",
        "postbuild": "npm test && nyc report npm test && nyc check-coverage npm test",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----------\"; npm run build --silent' ./src ./test",
        "example-build": "flow; babel --out-dir example/lib example/src --copy-files",
        "example-console": "node example/lib/console.js"
    },
    "babel": {
        "presets": [
            "solfege"
        ],
        "comments": false,
        "plugins": []
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ]
    }
}
