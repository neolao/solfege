{
    "name"          : "solfegejs",
    "description"   : "The Solfege framework",
    "homepage"      : "http://solfegejs.com",
    "version"       : "1.4.1",
    "author"        : "neolao <contact@neolao.com>",
    "private"       : false,
    "repository"    : "https://github.com/neolao/solfege.git",
    "license"       : "MIT",
    "main"          : "lib-es5/solfege.js",
    "engines"       :
    {
        "node": ">= 0.12"
    },
    "dependencies"  :
    {
        "co"                      : "4.5.*",
        "glob"                    : "5.0.*",
        "babel-runtime"           : "5.2.*",
        "node-generator-detector" : "0.2.1"
    },
    "devDependencies":
    {
        "babel"         : "5.2.*",
        "chai"          : "2.3.*",
        "mocha"         : "2.2.*",
        "jsdoc"         : "3.3.*"
    },
    "scripts"       :
    {
        "test"          : "mocha --harmony --harmony-proxies --recursive --reporter spec --bail",
        "documentation" : "jsdoc --recurse ./lib-es6 --destination ./documentation",
        "es6-watch"     : "babel --blacklist=regenerator --watch --out-dir lib-es5 lib-es6",
        "es6-compile"   : "babel --blacklist=regenerator --out-dir lib-es5 lib-es6"
    }
}
